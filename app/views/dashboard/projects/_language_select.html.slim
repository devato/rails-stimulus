.row
  .col-sm-12
    - if Current.supported_languages.present?
      - Current.supported_languages.each do |lang|
        .radio.radio-primary
          = form.radio_button :supported_language_id, lang.id
          label
            span.radio__img
              = image_tag asset_pack_path("images/lang-icons/#{lang.image}"), width: '20px'
            span.radio__text
              |  &nbsp;
              = lang.name
      - if @project_form&.errors[:supported_language_id].any?
        .has-error
          span.help-block Please select a language or framework

    - else
      .alert.alert-danger.alert-dismissible.fade.show role="alert"
        button.close aria-label="Close" data-dismiss="alert" type="button"
